<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="DemoApp">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Demo App", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/">Home</a></li>
                    <li><a href="/customers">Customers</a></li>
                    <li><a href="/customers/new">Add New Customer</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
       
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/Scripts/lib/angular.min.js")
    @Scripts.Render("~/Scripts/lib/angular-resource.min.js")
    @Scripts.Render("~/Scripts/lib/angular-ui-router.min.js")
    @Scripts.Render("~/Scripts/lib/restangular.min.js")
    @Scripts.Render("~/Scripts/lib/ui-bootstrap-tpls.min.js")
    @Scripts.Render("~/Scripts/lib/select2.min.js")
    @Scripts.Render("~/Scripts/lib/ui-select2.js")
    @Scripts.Render("~/Scripts/lib/underscore.js")

    @Scripts.Render("~/Scripts/customScript/app.js")


    @RenderSection("scripts", required: false)
</body>
</html>
